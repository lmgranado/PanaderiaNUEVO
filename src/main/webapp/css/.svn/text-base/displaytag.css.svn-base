/* css/displaytag.css */


table.displaytag_tabla {
	color: #6F6B68;
	background-color: transparent;
	font-size: 11px;
	vertical-align: top;
	border-spacing: 0px;
	width: 98%;
}


thead tr {
	color: #2DACE4;
	font-size: 11px;
	font-family: Verdana;
	background-image: url("../img/pixel_cab_listado.jpg");	
	background-repeat: repeat-x;
}

th.sorted {		
	color: red;
}

th a,th a:visited {
	color: #FEFFFA;
	text-decoration: none;
}

th a:hover {
	text-decoration: none;
	color: #FEFFFA;
}

th.sorted a,th.sortable a {
	text-decoration: none;
	color: #2DACE4;
	font-size: 11px;
	font-family: Verdana;
	text-align: center;
	vertical-align: top;
	background-position: right;
	display: block;
	width: 100%;
	
}

th.sortable a {
	background: url(../img/ordenar.gif) no-repeat right;
	
}

th.order1 a {
	background: url(../img/ordenar.gif) no-repeat right;
	text-decoration: none;
	/*border: 1px;*/
	
}

th.order2 a {
	background: url(../img/ordenar.gif) no-repeat right;
	text-decoration: none;
}


tr.odd {
	background-color: #FFFFFF;
	color: #797979;
	font-size: 11px;	
	font-family: Verdana;
	font-weight: bold;
}

tr.tableRowEven,tr.even {
	background-color: #F2FBFF;
	color: #797979;
	font-size: 11px;	
	font-family: Verdana;
	font-weight: bold;
}


div.exportlinks {
	height: 26px;
	width: 100%;
	text-align: right;
	margin-top: 20px;
}

span.export {
	padding: 0px 100px 12px 0px;
	cursor: pointer;
}

span.excel {
	background: url(../img/displaytag/ico_file_excel.png) no-repeat;
}

span.csv {
	background: url(../img/displaytag/ico_file_csv.png) no-repeat;
}

span.xml {
	background: url(../img/displaytag/ico_file_xml.png) no-repeat;
}

span.pdf {
	height: 25px;
	width: 100px;
	background-image: url(../img/btn_imprimir.gif);
}

span.rtf {
	background: url(../img/displaytag/ico_file_rtf.png) no-repeat;
}

span.pagebanner {
	/*background-color: #eee;*/
	border: 0px dotted #999;
	padding: 2px 0px 2px 0px;
	width: 100%;
	padding-top: 5px;
	display: block;
	border-bottom: none;
	font-size: 10px;
	font-weight: bold;
	color: #999999;
	text-align: center;
	
}

span.pagelinks {
	font-size: 12px;
	font-weight: bold;
	color: #999999;
	width: 100%;
	text-align: center;
	float: left;
	padding-top: 8px;	
}

span.page_selected{
	color: #999999;
	font-family: Verdana;
	font-size: 10px;
	vertical-align: middle;	
}

span.page_separator{
	color: #999999;
	font-family: Verdana;
	font-size: 10px;
	vertical-align: middle;
}

a.page_link{
	color: #999999;
	font-family: Verdana;
	font-size: 10px;
	vertical-align: middle;	
}
a.page_link:hover{
	color: #999999;
}

TD.display_celda{
	padding: 3px 3px 3px 3px;
	vertical-align: middle;
}

TD.display_celda_acciones{
	vertical-align: middle;
	text-align: center;
	white-space: nowrap;
}

.nresultados {
	width: 369px;
	float: left;
	padding-left: 3px;
	font-size: 11px;
	padding-top: 8px;
	border-top: 0px dotted #b7b7b7;
	color: #999999;
}

.selector {
	border-top: 0px dotted red;
	width: 368px;
	padding-top: 8px;	
	float: right;
	text-align: right;
	font-size: 11px;
	color: #999999;
}

.clase_selector {
	font-size: 11px;
	width: 45px;
	margin-left: 3px;
	margin-right: 3px;
	color:#999999;
}

.columna {
	border-bottom: 1px solid #E8E8E8;
	text-align: center;
	border-left: 1px solid #E8E8E8;
}

.columna_der {
	border-bottom: 1px solid #E8E8E8;
	text-align: right;
	border-left: 1px solid #E8E8E8;
}

.columna_izq {
	border-bottom: 1px solid #E8E8E8;
	text-align: left;
	border-left: 1px solid #E8E8E8;
}

HTML>BODY .columna {
	border-bottom: 1px solid #E8E8E8;
	text-align: center;
	padding: 3px 2px 2px 2px; 
}
